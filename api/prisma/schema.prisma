generator client {
  provider = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Timezone {
  id                     Int      @id @default(autoincrement())
  country_code           String
  utc_offset             String   
  name                   String   
  daylight_saving_offset String? 
}

model Date {
  id Int @id @default(autoincrement())
  date DateTime
}

model Administrator {
  id       Int    @id @default(autoincrement())
  email    String @unique 
  password String 
  name     String 
}

model TimeDiff {
  id          String   @id
  searched_at DateTime
}

model Timestamp {
  id          String   @id
  searched_at DateTime
}